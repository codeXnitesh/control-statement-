n = int(input("Enter a number: "))


for i in range(n, 0, -1):
    left_stars = "*" * i
    spaces = " " * (2 * (n - i) + 1)
    right_stars = "*" * i
    print(left_stars + spaces + right_stars)



for i in range(1, n + 1):
    left_stars = "*" * i
    spaces = " " * (2 * (n - i) + 1)
    right_stars = "*" * i
    print(left_stars + spaces + right_stars)